<div class="container-fluid">
  <div class="col-md-6 col-sm-6 col-lg-3 event-container">
    <div class="card" style="width: 18rem;">
      <img src=<%= @event.organization.image %> class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= @event.name%></h5>
        <p class="card-text"><%= @event.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= @event.location%></li>
        <li class="list-group-item"><%= @event.date%></li>
      </ul>
      <div class="card-body">
        <% if  check_reservation(@event)-%>
            <p>You are signed up for this Event</p>
          <% else %>
            <a href="<%=@event.id%>/reservations/new" class="btn btn-primary">Attend</a>
          <% end %>
      </div>
    </div>
  </div>
  <% if current_user == User.first %>
    <div class="reservations-container">
      <% @event.reservations.each do |reservation|%>
        <ul class="list-group list-group-horizontal">
          <li class="list-group-item"><%= reservation.user.frist_name%></li>
          <li class="list-group-item"><%= reservation.user.last_name%></li>
          <li class="list-group-item"><%= reservation.user.email%></li>
        </ul>
       <% end %>
    </div>
  <% end %>
</div>
